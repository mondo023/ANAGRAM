<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_challenges"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="brd_e.m_t_anagram.challenges">

	<Button
		android:text = "Medium"
		android:layout_width = "wrap_content"
		android:layout_height = "wrap_content"
		android:id = "@+id/med"
		android:background = "@android:color/holo_orange_dark"
		android:layout_centerVertical = "true"
		android:layout_centerHorizontal = "true"
		android:onClick="onClickmed"/>

	<Button
		android:text = "Easy"
		android:layout_width = "wrap_content"
		android:layout_height = "wrap_content"
		android:id = "@+id/ez"
		android:background = "@android:color/holo_orange_dark"
		android:layout_marginEnd = "90dp"
		android:layout_alignBaseline = "@+id/med"
		android:layout_alignBottom = "@+id/med"
		android:layout_toStartOf = "@+id/med"
		android:onClick="onClickez"/>

	<Button
		android:text = "Hard"
		android:layout_width = "wrap_content"
		android:layout_height = "wrap_content"
		android:id = "@+id/hard"
		android:background = "@android:color/holo_orange_dark"
		android:layout_marginEnd = "93dp"
		android:layout_alignBaseline = "@+id/med"
		android:layout_alignBottom = "@+id/med"
		android:layout_alignParentEnd = "true"
		android:onClick="onClickhard"/>
</RelativeLayout>
